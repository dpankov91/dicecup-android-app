<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GUI.MainActivity">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/diceboard"
        android:layout_width="243dp"
        android:layout_height="412dp"
        android:layout_below="@id/tvHeader"
        android:layout_centerHorizontal="true"
        android:background="@color/diceboard"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgD1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/d1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imgD2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgD1"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/d2"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imgD3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgD1"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/d3"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="127dp" />

        <ImageView
            android:id="@+id/imgD4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgD2"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgD3"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/d4"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="265dp" />

        <ImageView
            android:id="@+id/imgD5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgD3"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/d5"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="127dp" />

        <ImageView
            android:id="@+id/imgD6"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:layout_below="@id/imgD4"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/imgD5"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/d6"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="264dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="486dp"
        android:layout_height="409dp"
        android:layout_below="@id/diceboard"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">


        <Spinner
            android:id="@+id/numbersSpinner"
            android:layout_width="63dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btnRoll"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="87dp" />

        <Button
            android:id="@+id/btnGoToHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="History"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="180dp" />

        <Button
            android:id="@+id/btnRoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:onClick="onClickRoll"
            android:text="Roll"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="104dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>